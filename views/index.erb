<% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="/" class="close">&times;</a>
  </div>
<% end %>

<h1>Welcome to Bookmark Manager</h1>

<form action="/new" method="post">
  <input type="text" name="title" placeholder="add a title here">
  <input type="text" name="bookmark" placeholder="add new link here">
  <input type="submit" value="Add Bookmark">
</form>

<ol>
  <% @links.each do |link| %>
  <li><a href="<%= link.url %>"><%= link.title %></a>
    <form action="/update" method="post">
      <input type="hidden" name="id" value="<%= link.id %>">
      <input type="submit" value="Edit <%= link.title %>">
    </form>
    <form action="/delete" method="post">
      <input type="hidden" name="id" value="<%= link.id %>">
      <input type="submit" value="Delete <%= link.title %>">
    </form>
  </li>
  <% end %>
</ol>
